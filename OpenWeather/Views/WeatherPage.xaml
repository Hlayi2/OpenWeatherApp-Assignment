<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="OpenWeather.Views.WeatherPage"
             Title="WeatherPage">
    <ContentPage.Background>
        <LinearGradientBrush EndPoint="0,1">
            <GradientStop Color="#b5179e" Offset="0.0" />
            <GradientStop Color="#7209b7" Offset="1.0" />
        </LinearGradientBrush>
    </ContentPage.Background>



    <Grid RowDefinitions="Auto,Auto,Auto,Auto,Auto"
          RowSpacing="20">

        <!-- Search Section: Row 0 -->
        <StackLayout Grid.Row="0"
                     Margin="20,20,20,0"
                     Orientation="Horizontal">
            
            <Frame Padding="10"
                   CornerRadius="40"
                   HasShadow="True"
                   BorderColor="#7209b7"
                   BackgroundColor="#b5179e"
                   HorizontalOptions="FillAndExpand">
                <Label x:Name="SearchLabel"
                       Text="Enter your city"
                       FontSize="Default"
                       />
               
                <Frame.GestureRecognizers>
                    <TapGestureRecognizer Tapped="OnLocationrTapped" />
                </Frame.GestureRecognizers>
            </Frame>

            <!-- Weather forecast icon button -->
            <ImageButton Source="weather_forecast.png" 
                        HeightRequest="30"
                        WidthRequest="30"
                        HorizontalOptions="End"
                        Clicked="ImageButton_Clicked"
                        BackgroundColor="Transparent"/>
        </StackLayout>

        <!-- City and Weather Description: Row 1 -->
        <StackLayout Grid.Row="1"
                     Orientation="Vertical">
            <Label x:Name="LblCity"
                   FontSize="40"
                   HorizontalOptions="Center"
                   TextColor="White"/>
            <Label x:Name="LblWeatherDescription"
                   FontSize="20"
                   HorizontalOptions="Center"
                   TextColor="White"/>
        </StackLayout>

    
        <Image Grid.Row="2"
               x:Name="ImgWeatherIcon"
               VerticalOptions="Start"
               HeightRequest="200"
               WidthRequest="200"
               HorizontalOptions="Center"/>

        
        <Grid Grid.Row="3"
              RowDefinitions="Auto,Auto"
              ColumnDefinitions="0.33*,0.33*,0.33*"
              Margin="20">

            <!-- Temperature Display -->
            <Label x:Name="LblTemperature"
                   Grid.Row="0"
                   Grid.Column="1"
                   Grid.RowSpan="2"
                   HorizontalOptions="Center"
                   FontSize="48"
                   TextColor="White"
                   FontAttributes="Bold"/>

            <!-- Humidity Section -->
            <Image Grid.Row="0"
                   Grid.Column="0"
                   HorizontalOptions="Center"
                   HeightRequest="25"
                   Source="humidity.png"/>
            <Label x:Name="LblHumidity"
                   Grid.Row="1"
                   Grid.Column="0"
                   HorizontalOptions="Center"
                   TextColor="White"/>

            <!-- Wind Section -->
            <Image Grid.Row="0"
                   Grid.Column="2"
                   HorizontalOptions="Center"
                   HeightRequest="25"
                   Source="wind.png"/>
            <Label x:Name="LblWind"
                   Grid.Row="1"
                   Grid.Column="2"
                   HorizontalOptions="Center"
                   TextColor="White"/>
        </Grid>

        
        <CollectionView Grid.Row="4" 
                       x:Name="CvWeather" 
                       HeightRequest="200">
            <!-- Defines the layout of the items within the CollectionView -->
            <CollectionView.ItemsLayout>
                <LinearItemsLayout Orientation="Horizontal"
                                 ItemSpacing="20"/>
            </CollectionView.ItemsLayout>
            
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Grid RowDefinitions="Auto,Auto,Auto"
                          Padding="10">
                        <Image Grid.Row="0"
                               HorizontalOptions="Center"
                               VerticalOptions="Start"
                               HeightRequest="50"
                               WidthRequest="50"
                               Source="{Binding weather[0].customIcon}"/>
                        <Label Grid.Row="1"
                               FontSize="Large"
                               TextColor="White"
                               HorizontalOptions="Center"
                               Text="{Binding main.temperature,StringFormat='{0}Â°'}"/>
                        <Label Grid.Row="2"
                               FontSize="Small"
                               TextColor="White"
                                LineBreakMode="WordWrap"
                               HorizontalOptions="FillAndExpand" 
                               VerticalOptions="Center"
                               Text="{Binding dateTime}"/>
                    </Grid>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </Grid>
</ContentPage>